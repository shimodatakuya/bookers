
  <body>
    <p id="notice"></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

      <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id)%></td>
      <td><%= link_to "Edit", edit_book_path(book.id)%></td>
      <td><%= link_to "Destroy", book_path(book.id),method: :delete, "data-confirm"=>"Are you sure?"%>
    </tr>
       <% end %>
  </tbody>
</table>


<h2>New book</h2>
<%= form_with model: @book, url:'/books',local:true do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <% if @book.errors.messages[:title].any? %>
  <p>error</p>
  <span class="error"><%=@book.errors.messages[:title][0] %></span>
  <% end %>

  <h4>本文</h4>
  <%= f.text_area :body %>
  <% if @book.errors.messages[:title].any? %>
  <p>error</p>
  <span class="error"><%=@book.errors.messages[:title][0] %></span>
  <% end %>

  <%= f.submit 'Create Book' %>

<% end %>


</body>
